<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context=".ui.citysearch.SearchCityFragment">
    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:inputType="text"
            android:queryHint="@string/enter_city_name_hint"
            android:iconifiedByDefault="false" android:id="@+id/searchView"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/citiesRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>